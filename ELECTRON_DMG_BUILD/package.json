{
  "name": "swiftmetro",
  "version": "1.0.9",
  "description": "Professional wireless logging dashboard for native iOS - Real-time debugging on steroids",
  "main": "electron-main.js",
  "bin": {
    "swifmetro": "./bin/swifmetro.js"
  },
  "scripts": {
    "start": "electron .",
    "server": "node swifmetro-server.js",
    "license": "node swifmetro-license-server.js",
    "auth": "node swifmetro-auth-server.js",
    "advanced": "node swifmetro-advanced-server.js",
    "secure": "node swifmetro-secure-server.js",
    "hot-reload": "node swifmetro-hot-reload.js",
    "setup": "./setup.sh",
    "test": "./test-swifmetro.sh",
    "build": "electron-builder --mac",
    "build:all": "electron-builder -mwl"
  },
  "keywords": [
    "ios",
    "swift",
    "logging",
    "debugging",
    "terminal",
    "websocket",
    "metro",
    "native",
    "xcode"
  ],
  "author": "72hConcept Team",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "bonjour": "^3.5.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "resend": "^6.1.2",
    "ws": "^8.14.2"
  },
  "optionalDependencies": {
    "firebase-admin": "^11.0.0",
    "stripe": "^13.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/swiftmetro/swiftmetro.git"
  },
  "homepage": "https://swiftmetro.dev",
  "bugs": {
    "url": "https://github.com/swiftmetro/swiftmetro/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "electron": "^32.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.swiftmetro.app",
    "productName": "SwifMetro",
    "afterSign": "build/notarize.js",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "identity": "Conlan Ainsworth (HPV26WQ9RU)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "SwifMetro Installer"
    },
    "files": [
      "electron-main.js",
      "swifmetro-server.js",
      "swifmetro-dashboard.html",
      "CONFIDENTIAL/.env",
      "node_modules/**/*"
    ]
  }
}
